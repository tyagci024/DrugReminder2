<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/bg_app"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.view.FragmentPersonalInfo">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Kullanıcı Bilgileri"
        android:textColor="#2a9d8f"
        android:textStyle="bold"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/personName"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_height="60dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:hint="İsim Soyisim"
        android:inputType="textPersonName"
        android:paddingLeft="24dp"
        android:paddingRight="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />



    <EditText
        android:id="@+id/personAge"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:gravity="start|top"
        android:hint="yaşınız"
        android:inputType="textMultiLine"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personName" />

    <EditText
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/spinner_blood_group"
        android:layout_width="match_parent"
        android:hint="kan grubunuz"

        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/adres"
        tools:layout_editor_absoluteX="35dp" />

    <EditText
        android:id="@+id/adres"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Adres"
        android:inputType="textMultiLine"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personAge" />
    <EditText
        android:id="@+id/pGSM"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:gravity="start|top"
        android:hint="GSM"
        android:inputType="textMultiLine"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_blood_group" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2a9d8f"
        android:shadowRadius="@integer/material_motion_duration_long_1"
        android:text="kaydet"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pGSM"></Button>




</androidx.constraintlayout.widget.ConstraintLayout>